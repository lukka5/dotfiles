" VIMPERATORRC

" Mappings
let mapleader = ","
nmap <leader>` :noh<cr>
nmap <leader>V :source ~/.vimperatorrc<cr>:echo "vimperatorrc reloaded!"<cr>

" Last/first tab
nmap $ :tablast<cr>
nmap 0 :tabrewind<cr>

" Easily switch tabs
nmap <c-o> gt
nmap <c-i> gT

" Easily move tabs
nmap <c-s-o> :tabmove +1<cr>
nmap <c-s-i> :tabmove -1<cr>

" Prev buffer
nmap `` :b #<cr>

" Bash-like shortcuts
cmap <c-f> <Right>
cmap <c-b> <Left>
cmap <c-p> <Up>
cmap <c-n> <Down>
cmap <c-d> <Del>
imap <c-f> <Right>
imap <c-b> <Left>
imap <c-p> <Up>
imap <c-n> <Down>
imap <c-d> <Del>

" Don't use small icons in firefox toolbar
set smallicons=false


